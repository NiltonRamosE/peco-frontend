---
import ScrollingBanner from "@/landing/components/ScrollingBanner.astro";

const frases = [
  "¿Aún con dudas? 😶",
  "¿deseas saber más de nosotros? 🤔",
  "Tranquilo, puedes contactarnos 😉 o llamarnos 😎",
];
---

<section class="text-center">
  <ScrollingBanner phrases={frases} />
 
  <h3 class="text-2xl font-medium relative inline-block mt-10">
    CONTÁCTANOS AHORA
    <br />
    <span class="text-theme-verdigris text-4xl font-bold block mt-2">
      ¿QUÉ MEDIO PREFIERES?
    </span>

    <span class="block h-[2px] w-64 bg-theme-verdigris mx-auto mt-6 transition-all duration-300 hover:w-120"></span>
  </h3>

  <div class="flex flex-wrap justify-center gap-4 mt-10 px-4 sm:px-0">
    <a
      href="https://wa.me/51951011604"
      target="_blank"
      class="flex items-center justify-center gap-2 bg-theme-verdigris text-theme-rich-black px-6 py-4 w-90 rounded-2xl font-regular text-xl shadow-md transition hover:bg-theme-verdigris/90"
    >
      <img src="/images/whatsapp-icon.svg" alt="icono de WhatsApp" class="w-6 h-6" />
      WhatsApp
    </a>


    <a
      href="tel:+51951011604"
      class="flex items-center gap-2 justify-center bg-theme-rich-black text-theme-white-smoke px-6 py-4 w-90 rounded-2xl font-regular text-xl shadow-md transition hover:bg-theme-rich-black/90"
    >
      <img src="/images/phone-icon.svg" alt="icono de telefono" class="w-6 h-6" />
      Llamar ahora
    </a>

    <a
      href="mailto:niltonencarnacion17@gmail.com"
      class="flex items-center gap-2 justify-center bg-theme-sky-blue text-theme-rich-black px-6 py-4 w-90 rounded-2xl font-regular text-xl shadow-md transition hover:bg-theme-sky-blue/90"
    >
      <img src="/images/mail-icon.svg" alt="icono de correo" class="w-6 h-6" />
      Correo
    </a>
  </div>
</section>

<style>
  .shadow-brand-card {
    box-shadow: 6px 6px 10px rgba(0, 0, 0, 0.3);
  }
</style>