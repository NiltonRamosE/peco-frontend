---
const {
  href = "#",
  label = "Click me",
  color = "bg-theme-malachite text-white hover:bg-theme-malachite/90",
  rounded = "rounded-xl",
  py = "py-2",
  px = "px-4",
  aditionalClasses = "",
} = Astro.props;
---

<a
  href={href}
  class={`inline-block border-2 border-b-6 border-black ${color} ${rounded} ${py} ${px} text-sm font-regular transition-colors duration-200 ${aditionalClasses}`}
>
  {label}
</a>